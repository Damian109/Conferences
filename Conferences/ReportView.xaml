<Window x:Class="Conferences.ReportView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Conferences"
        mc:Ignorable="d"
        Title="ReportView" Height="385.161" Width="591.29">
    <Grid>
        <RichTextBox HorizontalAlignment="Left" Height="290" Margin="10,10,0,0" VerticalAlignment="Top" Width="565">
            <FlowDocument>
                <Paragraph>
                    <Run Text="{Binding Report}"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="500,316,0,0" VerticalAlignment="Top" Width="75" Command="{Binding CommandSave}"/>

    </Grid>
</Window>
